{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "module": "ES6",
    "rootDir": "./",
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "types": [
      "node",
      "jest",
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}